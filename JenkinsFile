pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Checkout..'
		git 'https://github.com/grupo-exito-ecommerce/spring-petclinic.git'
            }
        }
        stage('build & SonarQube analysis') {
            steps {
                echo 'Building..'
		withSonarQubeEnv('localSonar') {
		  sh 'mvn clean package sonar:sonar'
		}
	    }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
